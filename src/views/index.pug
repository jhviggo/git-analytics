extends layouts/layout.pug 
include includes/git-description.pug

block content 
  h1= title 
  span Log name: 
    a(href="/api/log")= log.name

  each commit in log.commits
    h3
      a(href="/api/commit/" + commit.hash)= commit.hash
    p #{commit.developer.name} - #{commit.date}
    +gitDescription(commit.message)
    each value, key in commit.fileChangesOverview
      span #{key}: #{value}
      br
    
    ul 
     each file in commit.fileChanges 
      if file.isRename
        li #{file.name} => #{file.newName}
      else 
        li= file.name